@model MyProject.WebUI.Areas.Admin.Models.SocialMediaModel.SocialMediaListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Sosyal Medya</th>
            <th scope="col">Url</th>
            <th scope="col">İkon</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.socialMedias)
        {
            <tr>
                <th scope="row">@item.SocialMediaId</th>
                <td>@item.SocialMediaName</td>
                <td>@item.Address</td>
                <td>@item.Icon</td>
                <td><a href="/Admin/SocialMedias/Delete/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/SocialMedias/Update/@item.SocialMediaId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/SocialMedias/Add" class="btn btn-success">Ekle</a>


