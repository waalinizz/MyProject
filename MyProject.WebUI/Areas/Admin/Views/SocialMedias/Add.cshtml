@model MyProject.WebUI.Areas.Admin.Models.SocialMediaModel.SocialMediaAddViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="SocialMedias" asp-action="Add" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Sosyal Medya</label>
        <input type="text" class="form-control" asp-for="SocialMedia.SocialMediaName">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Url</label>
        <input type="text" class="form-control" asp-for="SocialMedia.Address">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">İkon</label>
        <input type="text" class="form-control" asp-for="SocialMedia.Icon">
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>


