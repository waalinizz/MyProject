@model MyProject.WebUI.Areas.Admin.Models.ExperienceTwoModel.ExperienceTwoListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Tarih</th>
            <th scope="col">Alt Başlık</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ExperienceTwos)
        {
            <tr>
                <th scope="row">@item.ExperienceTwoId</th>
                <td>@item.Title</td>
                <td>@item.Description.Substring(0,item.Description.Length> 100 ? 100 : item.Description.Length)</td>
                <td>@item.Date</td>
                <td>@item.Subtitle</td>
                <td><a href="/Admin/ExperienceTwos/Delete/@item.ExperienceTwoId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/ExperienceTwos/Update/@item.ExperienceTwoId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/ExperienceTwos/Add" class="btn btn-success">Ekle</a>
