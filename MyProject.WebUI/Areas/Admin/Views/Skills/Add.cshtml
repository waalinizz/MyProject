@model MyProject.WebUI.Areas.Admin.Models.SkillModel.SkillAddViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="Skills" asp-action="Add" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Yetenek</label>
        <input type="text" class="form-control" asp-for="Skill.SkillItem">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Yetenek Yüzdesi</label>
        <input type="text" class="form-control" asp-for="Skill.SkillItemPercent">
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>


