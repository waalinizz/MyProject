@model MyProject.WebUI.Areas.Admin.Models.ContactModel.ContactListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Alt Başlık</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contacts)
        {
            <tr>
                <th scope="row">@item.ContactId</th>
                <td>@item.Title</td>
                <td>@item.Subtitle.Substring(0,item.Subtitle.Length>100 ? 100 : item.Subtitle.Length)</td>
                <td><a href="/Admin/Contacts/Delete/@item.ContactId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/Contacts/Update/@item.ContactId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/Contacts/Add" class="btn btn-success">Ekle</a>

