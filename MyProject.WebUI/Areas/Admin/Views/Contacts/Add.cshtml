@model MyProject.WebUI.Areas.Admin.Models.ContactModel.ContactAddViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="Contacts" asp-action="Add" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Başlık</label>
        <input type="text" class="form-control" asp-for="Contact.Title">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Alt Başlık</label>
        <input type="text" class="form-control" asp-for="Contact.Subtitle">
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

