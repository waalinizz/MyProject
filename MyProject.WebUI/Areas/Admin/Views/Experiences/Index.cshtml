@model MyProject.WebUI.Areas.Admin.Models.ExperienceModel.ExperienceListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Tarih</th>
            <th scope="col">Alt Başlık</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Experiences)
        {
            <tr>
                <th scope="row">@item.ExperienceId</th>
                <td>@item.Title</td>
                <td>@item.Description.Substring(0,item.Description.Length > 100 ? 100 : item.Description.Length)</td>
                <td>@item.Date</td>
                <td>@item.Subtitle</td>
                <td><a href="/Admin/Experiences/Delete/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/Experiences/Update/@item.ExperienceId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/Experiences/Add" class="btn btn-success">Ekle</a>
