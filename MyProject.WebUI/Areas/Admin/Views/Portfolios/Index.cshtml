@model MyProject.WebUI.Areas.Admin.Models.PortfolioModel.PortfolioListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Portföy Adı </th>
            <th scope="col">Portföy Linki</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Portfolios)
        {
            <tr>
                <th scope="row">@item.PortfolioId</th>
                <td>@item.PortfolioName</td>
                <td>@item.PortfolioLink</td>
                <td><a href="/Admin/Portfolios/Delete/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/Portfolios/Update/@item.PortfolioId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/Portfolios/Add" class="btn btn-success">Ekle</a>
