@model MyProject.WebUI.Areas.Admin.Models.ServiceModel.ServiceListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Yazılım Alanı</th>
            <th scope="col">Resim</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Services)
        {
            <tr>
                <th scope="row">@item.ServiceId</th>
                <td>@item.SoftwareArea</td>
                <td>@item.Address</td>
                <td><a href="/Admin/Services/Delete/@item.ServiceId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/Services/Update/@item.ServiceId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/Services/Add" class="btn btn-success">Ekle</a>

