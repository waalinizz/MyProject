@model MyProject.WebUI.Areas.Admin.Models.AboutModel.AboutListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Yaş</th>
            <th scope="col">Birinci E-Posta</th>
            <th scope="col">İkinci E-Posta</th>
            <th scope="col">Telefon</th>
            <th scope="col">Adres</th>
            <th scope="col">Yazılım Alanı</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Abouts)
        {
            <tr>
                <th scope="row">@item.AboutId</th>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Description.Substring(0,item.Description.Length>20 ? 20:item.Description.Length)</td>
                <td>@item.Age</td>
                <td>@item.FirstEmail.Substring(0,item.FirstEmail.Length>10 ? 10:item.FirstEmail.Length)</td>
                <td>@item.SecondEmail.Substring(0,item.Description.Length>10 ? 10:item.Description.Length)</td>
                <td>@item.Phone</td>
                <td>@item.Address.Substring(0,item.SecondEmail.Length>10 ? 10: item.SecondEmail.Length)</td>
                <td>@item.SoftwareArea</td>
            </tr>
            <tr>
                <td><a href="/Admin/Abouts/Update/@item.AboutId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>

</table>
